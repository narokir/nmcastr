<h1><%=@user.name %></h1>
<p><%= @user.email %></p>
<div class="panel-footer">
    <span class="small"><%= link_to "Show", user_path(@user) %> |
        <%= link_to "Edit Account", edit_user_registration_path %> |
        <%= link_to "Delete", user_path(@user), method: :delete, data: { confirm: "Are you sure?" } %></span>
</div>


<% if user_signed_in? && @user.id == current_user.id%>
<h2>my Casting calls</h2>
<p><%@user.castingcalls.each do |call| %></p>
<%= call.title%>
<% end%>
<% else %>
<h2><%=@user.name %>'s Casting calls</h2>
<p><%@user.castingcalls.each do |call| %></p>
<%= call.title%>
<% end%>
<% end%>