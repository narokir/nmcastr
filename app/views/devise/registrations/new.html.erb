<div class="row bg-dark ">

    <div class="col-md-6  col-lg-4">
      <div class="border-right border-info bg-dark">
        <div class="card-body p-4">
        
            <h2>Join Castr</h2>
            <p>
              <%= link_to "Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-outline-action btn-sm", id: "sign_in" %>
              <%= link_to "Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-outline-action btn-sm" %>
            </p>
          <hr></hr>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render 'shared/form_errors', object: f.object %>
          
            <div class="form-inputs">
              <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'First Name' %>
              <%# f.input :surname, required: true, autofocus: true, label: false, placeholder: 'Last Name' %>
              <%# f.input :phone, required: true, autofocus: true, label: false, placeholder: 'Phone Number' %>
              <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Email' %>
              <%= f.input :password, required: true, label: false, placeholder: 'Create Password', hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
              <%#= f.input :password_confirmation, required: true, label: false, placeholder: 'Password' %>
            </div>
          
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: "btn btn-success" %>
            </div>
          <% end %>
          
        </div>
        <div class="card-footer small"><%= render "devise/shared/links" %></div>
      </div>
    </div>
</div>
